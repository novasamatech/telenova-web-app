FROM node:18-alpine

WORKDIR /app
COPY . .
COPY docker/entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/entrypoint.sh
RUN chmod +x /app/scripts/replace-variable.sh

ARG NEXT_PUBLIC_BOT_API_URL=BAKED_NEXT_PUBLIC_BOT_API_URL
ARG NEXT_PUBLIC_BOT_ADDRESS=BAKED_NEXT_PUBLIC_BOT_ADDRESS
ARG NEXT_PUBLIC_WEB_APP_ADDRESS=BAKED_NEXT_PUBLIC_WEB_APP_ADDRESS
ARG NEXT_PUBLIC_WEB_APP_URL=BAKED_NEXT_PUBLIC_WEB_APP_URL
ARG NEXT_PUBLIC_WIDGET_SECRET=BAKED_NEXT_PUBLIC_WIDGET_SECRET
ARG NEXT_PUBLIC_SECURE_LOCAL_STORAGE_DISABLED_KEYS=BAKED_NEXT_PUBLIC_SECURE_LOCAL_STORAGE_DISABLED_KEYS

RUN yarn install
RUN yarn build

CMD ["entrypoint.sh"]
